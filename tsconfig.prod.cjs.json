{
  "compilerOptions": {
    "outDir": "./app/dist/cjs",
    "module": "CommonJS",
    "target": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es2022", "DOM"],
    "esModuleInterop": true
  },
  "exclude": [
    "./test",
    "./repl",
    "./app/dist"
  ],
  "include": [
    "./app/src"
  ]
}